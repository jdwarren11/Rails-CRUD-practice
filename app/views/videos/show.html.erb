<h1><%= @video.title %></h1>

<h3><%= @video.description %></h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>

<form method="post" action="<%= "/videos/#{@video.id}" %>" >
    <input type="hidden" name="_method" value="delete">
<!-- 
    cant do method=delete but can put in additional input with name "_method" <- rails thingy and value=delete -->
    <input type="submit" value="delete" name="delete">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
</form>

<%#= form_tag("/videos/#{@video.id}", method: "delete")
    do %>
    <%#= submit_tag("delete") %>
<%# end %>

<!-- create comment -->
<form action="/videos" method="post">
    <input type='text' id='comment' name='comment[content]'>

    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <input type="submit" value="submit">
</form>


<!-- show all comments -->
<ul>
<% @comments.each do |comment| %>
    <li><%= comment.content %></li>
<% end %>
</ul>
