<form action=<%= "/videos/#{params[:id]}" %> method="post">
    <input name="_method" type="hidden" value="put">

    <label for="title">Title:</label>
    <input type="text" id="title" name="video[title]">

    <label for="description">Description:</label>
    <input type="text" id="description" name="video[description]">

    <label for="youtube_id">Youtube ID:</label>
    <input type="text" id="youtube_id" name="video[youtube_id]">

    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <input type="submit" value="submit">
</form>
<form method="post" action="<%= "/videos/#{@video.id}" %>" >
    <input type="hidden" name="_method" value="delete">
<!-- 
    cant do method=delete but can put in additional input with name "_method" <- rails thingy and value=delete -->
    <input type="submit" name="delete">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
</form>